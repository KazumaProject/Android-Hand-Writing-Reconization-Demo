<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootInfer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/strokeLabelInfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Stroke width"
        app:layout_constraintEnd_toStartOf="@id/strokeValueInfer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/strokeValueInfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="32 px"
        app:layout_constraintStart_toEndOf="@id/strokeLabelInfer"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/strokeSeekBarInfer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:max="60"
        android:progress="32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/strokeLabelInfer" />

    <com.kazumaproject.hand_writting_save_img.DrawingView
        android:id="@+id/drawingViewInfer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/inferButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/strokeSeekBarInfer" />

    <Button
        android:id="@+id/inferButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginBottom="12dp"
        android:text="Infer"
        app:layout_constraintBottom_toTopOf="@id/resultText"
        app:layout_constraintEnd_toStartOf="@id/clearInferButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/clearInferButton"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="Clear"
        app:layout_constraintBottom_toTopOf="@id/resultText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inferButton" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="(result)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
